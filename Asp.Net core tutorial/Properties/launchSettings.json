{
  "$schema": "http://json.schemastore.org/launchsettings.json",
  "iisSettings": {
    "windowsAuthentication": false,
    "anonymousAuthentication": true,
    "iisExpress": {
      "applicationUrl": "http://localhost:48409",
      "sslPort": 44360
    }
  },
  "profiles": {
    //HTTP: it is an application protocol that define set of rules to send request or response.
    //we can access requestes and responses of one site from "network" tab in developer tool of browser.
    "http": {
      //when our commandName is "Project", it means that it uses Kestrel.
      "commandName": "Project",
      //when dotnetRunMessages is true, our cli open when we run the project.
      "dotnetRunMessages": true,
      //when launchBrowser is true, our default browser open when we run the project.
      "launchBrowser": true,
      //this is our url of this profile
      "applicationUrl": "http://localhost:5121",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    //differences between http & https: ssl => Secure Sockets Layer:  it encrypts the request.
    "https": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      "applicationUrl": "https://localhost:7234;http://localhost:5121",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    "IIS Express": {
      "commandName": "IISExpress",
      "launchBrowser": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  }
}




/*HTTP status codes:
  100-199: informational responses
  200-299: successful responses
  300-399: redirection messages
  400-499: client error responses
  500-599: server error responses*/

